<% if user_file.id %>
<div class="fileBox">
    <% if action_name == "edit" %>
        <%= link_to 'Delete file', [user_file.user, user_file],
            method: :delete,
            data: {confirm: "Delete file?"} %>
    <% end %>

    <strong>Name: </strong><%= user_file.name %><br>
    <strong>Comment:</strong><br>
    <%=  user_file.comment %>
    <br><br>
    <strong>Data:</strong>
    <br>
    <%= user_file.data %>
</div>
<% end %>
