<h1>Users</h1>
<table>
    <thead>
        <tr>
            <th><strong>Name</strong></th>
            <th><strong>E-mail</strong></th>
            <th colspan=3>Controls</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td>
            <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Delete #{user.name}?"} %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>
<%= link_to 'New', new_user_path %>
