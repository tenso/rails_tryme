<h1>Users:</h1>
<table>
    <tr>
        <td><strong>Name</strong></td>
        <td><strong>E-mail</strong></td>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: 'Sure?'} %></td>
    </tr>
    <% end %>
</table>

<td><%= link_to 'Back', root_path %></td>
<td><%= link_to 'New', new_user_path %></td>
